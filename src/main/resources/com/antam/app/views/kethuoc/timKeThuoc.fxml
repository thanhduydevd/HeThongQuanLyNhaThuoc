<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="730.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.antam.app.controller.kethuoc.TimKeThuocController">
   <content>
      <VBox spacing="30.0" style="-fx-background-color: #f8fafc;">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Text fill="#1e3a8a" strokeType="OUTSIDE" strokeWidth="0.0" text="Tìm kệ thuốc">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
                  </Text>
                  <Pane HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <FlowPane hgap="5.0" styleClass="box-pane" stylesheets="@../../styles/dashboard_style.css" vgap="5.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Text fill="#374151" strokeType="OUTSIDE" strokeWidth="0.0" text="Tìm kiếm:">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Text>
                        <TextField fx:id="tfTimKiem" prefHeight="40.0" prefWidth="300.0" promptText="Tìm kiếm kệ thuốc..." style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-radius: 8px;" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Text fill="#374151" strokeType="OUTSIDE" strokeWidth="0.0" text="Tìm theo:">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Text>
                        <ComboBox fx:id="cbLuaChon" prefHeight="40.0" prefWidth="200.0" promptText="Chọn trạng thái" styleClass="combo-box" stylesheets="@../../styles/dashboard_style.css" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Text fill="#374151" strokeType="OUTSIDE" strokeWidth="0.0">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Text>
                        <Button fx:id="btnTimKiem" mnemonicParsing="false" prefHeight="40.0" prefWidth="50.0" style="-fx-background-color: #2563eb; -fx-background-radius: 5px;" textFill="WHITE">
                           <graphic>
                              <FontAwesomeIcon fill="WHITE" glyphName="SEARCH" />
                           </graphic>
                        </Button>
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Text fill="#374151" strokeType="OUTSIDE" strokeWidth="0.0">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Text>
                        <Button fx:id="btnXoaRong" mnemonicParsing="false" prefHeight="40.0" prefWidth="93.0" styleClass="btn-xoarong" stylesheets="@../../styles/dashboard_style.css" text="Xoá rỗng" textFill="WHITE">
                           <graphic>
                              <FontAwesomeIcon fill="WHITE" glyphName="REFRESH" />
                           </graphic>
                        </Button>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <effect>
                  <DropShadow blurType="GAUSSIAN" height="44.45" offsetX="3.0" offsetY="2.0" radius="19.5275" width="35.66">
                     <color>
                        <Color red="0.8274509906768799" green="0.8274509906768799" blue="0.8274509906768799" />
                     </color>
                  </DropShadow>
               </effect>
            </FlowPane>
            <HBox alignment="CENTER_LEFT" spacing="10.0" />
            <TableView fx:id="tbKeThuoc" prefHeight="800.0" stylesheets="@../../styles/dashboard_style.css">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
