<?import javafx.scene.text.Text?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="730.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.antam.app.controller.DatThuocController">
   <content>
      <VBox spacing="30.0" style="-fx-background-color: #f8fafc;">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <Text fill="#1e3a8a" strokeType="OUTSIDE" strokeWidth="0.0" text="Quản lý phiếu đặt">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
                  </Text>
                  <Pane HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnAddPurchaseOrder" mnemonicParsing="false" prefHeight="50.0" prefWidth="118.0" style="-fx-background-color: #2563eb; -fx-background-radius: 5px;" text="Tạo phiếu đặt" textFill="WHITE">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="PLUS" text="" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <FlowPane hgap="5.0" styleClass="box-pane" stylesheets="@../../styles/dashboard_style.css" vgap="5.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Text fill="#374151" strokeType="OUTSIDE" strokeWidth="0.0" text="Nhân viên:">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Text>
                        <ComboBox fx:id="cbNhanVien" prefHeight="40.0" prefWidth="200.0" promptText="Chọn nhân viên" styleClass="combo-box" stylesheets="@../../styles/dashboard_style.css" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Text fill="#374151" strokeType="OUTSIDE" strokeWidth="0.0" text="Trạng thái:">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Text>
                        <ComboBox fx:id="cbTrangThai" prefHeight="40.0" prefWidth="200.0" promptText="Chọn trạng thái" styleClass="combo-box" stylesheets="@../../styles/dashboard_style.css" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Text fill="#374151" strokeType="OUTSIDE" strokeWidth="0.0" text="Từ ngày:">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Text>
                        <DatePicker fx:id="DPstart" prefHeight="40.0" prefWidth="200.0" styleClass="combo-box" stylesheets="@../../styles/dashboard_style.css" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Text fill="#374151" strokeType="OUTSIDE" strokeWidth="0.0" text="Đến ngày:">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Text>
                        <DatePicker fx:id="DPend" prefHeight="40.0" prefWidth="200.0" styleClass="combo-box" stylesheets="@../../styles/dashboard_style.css" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Text fill="#374151" strokeType="OUTSIDE" strokeWidth="0.0" text="Khoảng giá:">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Text>
                        <ComboBox fx:id="cbGia" prefHeight="40.0" prefWidth="200.0" promptText="Chọn khoảng giá" styleClass="combo-box" stylesheets="@../../styles/dashboard_style.css" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <effect>
                  <DropShadow blurType="GAUSSIAN" height="44.45" offsetX="3.0" offsetY="2.0" radius="19.5275" width="35.66">
                     <color>
                        <Color red="0.8274509906768799" green="0.8274509906768799" blue="0.8274509906768799" />
                     </color>
                  </DropShadow>
               </effect>
            </FlowPane>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <TextField fx:id="txtFind" prefHeight="40.0" prefWidth="300.0" promptText="Tìm kiếm phiếu đặt..." style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-radius: 8px;" />
                  <Button fx:id="btnFind" mnemonicParsing="false" prefHeight="40.0" prefWidth="50.0" style="-fx-background-color: #2563eb; -fx-background-radius: 5px;" textFill="WHITE">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="SEARCH" text="" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <TableView fx:id="tvPhieuDat" prefHeight="346.0" prefWidth="858.0" stylesheets="@../../styles/dashboard_style.css">
               <columns>
                  <TableColumn fx:id="colMaPhieu" prefWidth="75.0" text="Mã phiếu đặt" />
                  <TableColumn fx:id="colNgay" prefWidth="75.0" text="Ngày đặt" />
                  <TableColumn fx:id="colKhach" prefWidth="75.0" text="Khách hàng" />
                  <TableColumn fx:id="colSDT" prefWidth="75.0" text="Số điện thoại" />
                  <TableColumn fx:id="colNhanVien" prefWidth="75.0" text="Người tạo" />
                  <TableColumn fx:id="colTotal" prefWidth="75.0" text="Tổng tiền" />
                  <TableColumn fx:id="colStatus" prefWidth="75.0" text="Trạng thái" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
